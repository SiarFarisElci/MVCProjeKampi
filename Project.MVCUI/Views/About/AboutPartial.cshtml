@model AboutVM

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Yeni Hakkımızda Yazı Girişi
</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"> Hakkımızda Metin Girisi</h2>
            </div>
            <form method="post" action="/About/AddAbout">
                <div class="modal-body">
                    <label>
                        Hakkımda Metin1
                    </label>
                    @Html.TextBoxFor(x => x.About.AboutDetail1, new { @class = "form-control" })
                    <br />
                    <label>
                        Hakkımda Metin2
                    </label>
                    @Html.TextBoxFor(x => x.About.AboutDetail2, new { @class = "form-control" })
                    <br />
                    <label>
                        Hakkımda Gorsel1
                    </label>
                    @Html.TextBoxFor(x => x.About.AboutImage1, new { @class = "form-control" })
                    <br />
                    <label>
                        Hakkımda Gorsel2
                    </label>
                    @Html.TextBoxFor(x => x.About.AboutImage2, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-info">
                        Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
