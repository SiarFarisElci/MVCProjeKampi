@model CategoryVM

@{
    ViewBag.Title = "GetCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        @Html.ActionLink("Kategori ekle", "AddCategory", "AdminCategory", null, new { @class = "btn btn-primary" })
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Kategori ID</th>
                        <th>Kategori ismi</th>
                        <th class="hidden-phone">Kategori Acıklaması</th>
                        <th class="hidden-phone">Durum</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Güncelle</th>
                        <th class="hidden-phone">Baslık</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (Category item in Model.Categories)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td>
                                @item.CategoryName
                            </td>
                            <td class="hidden-phone">@item.Description</td>
                            <td class="center hidden-phone">@item.Status</td>
                            <td class="center hidden-phone"> @Html.ActionLink("Sil", "DeleteCategory", new { id = item.ID }, new { @class = "btn btn-danger" })  </td>
                            <td class="center hidden-phone">  @Html.ActionLink("Güncelle", "UpdateCategory", new { id = item.ID }, new { @class = "btn btn-warning" })  </td>
                            <td class="center hidden-phone">  @Html.ActionLink("Baslıklar", "BaslikCategory", new { id = item.ID }, new { @class = "btn btn-primary" })  </td>
                        </tr>
                    }



                </tbody>
            </table>

        </div>
    </div>
</section>